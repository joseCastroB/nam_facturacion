<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_in_invoice_tree_nam_custom" model="ir.ui.view">
        <field name="name">account.in.invoice.tree.nam.custom</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_in_invoice_tree"/>
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='ref']" position="replace"/>
            <xpath expr="//field[@name='name']" position="after">
                <field name="ref" string="Referencia" optional="show"/>
            </xpath>

            <xpath expr="//field[@name='invoice_date_due']" position="after">
                <field name="nam_fecha_vencimiento_formato" string="Vencimiento (Formato)" optional="show"/>
                <field name="nam_analitica_nombres" string="AnalÃ­tica" optional="show"/>
            </xpath>

            <field name="invoice_date_due" position="attributes">
                <attribute name="optional">show</attribute>
            </field>

        </field>
    </record>
</odoo>